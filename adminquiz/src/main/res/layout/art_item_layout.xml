<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_view"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rta_quesNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question No. 1 "
            android:layout_weight="1"/>
<!--        <ImageButton-->
<!--            android:id="@+id/reviewPageEditButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_edit"-->
<!--            android:background="@color/white"-->
<!--            android:layout_marginRight="10dp"/>-->
        <ImageButton
            android:id="@+id/reviewPageDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_button"
            android:background="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        />

    <TextView
        android:id="@+id/rta_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:text="Question"/>

    <TextView
        android:id="@+id/rta_optionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option A"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/rta_optionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option B"/>

    <TextView
        android:id="@+id/rta_optionC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option C"/>

    <TextView
        android:id="@+id/rta_optionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option D" />

</LinearLayout>