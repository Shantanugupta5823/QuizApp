<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_view"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ans_quesNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question No. 1 " />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        />

    <TextView
        android:id="@+id/ans_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:text="Question"/>

    <TextView
        android:id="@+id/ans_optionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option A"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ans_optionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option B"/>

    <TextView
        android:id="@+id/ans_optionC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option C"/>

    <TextView
        android:id="@+id/ans_optionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option D" />

    <TextView
        android:id="@+id/ans_optionCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option Correct" />


</LinearLayout>